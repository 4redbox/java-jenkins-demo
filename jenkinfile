pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from the repository
                git 'https://github.com/4redbox/java-jenkins-demo.git'
            }
        }
        
        stage('Compile') {
            steps {
                // Compile the Java program
                bat 'javac calc.java'
            }
        }
        
        stage('Test Add') {
            steps {
                // Test addition
                bat 'java calc 10 5 add > result'
                if (result == 15) {
                    echo 'Addition test passed'
                } else {
                    error 'Addition test failed'
                }
            }
        }
        
        stage('Test Sub') {
            steps {
                // Test subtraction
                bat 'java Calc 10 5 sub > output.txt'
                if (result == 5) {
                    echo 'Subtraction test passed'
                } else {
                    error 'Subtraction test failed'
                }
            }
        }
        
        stage('Test Mul') {
            steps {
                // Test multiplication
                sh 'java Calc 10 5 mul > output.txt'
                if (result == 50) {
                    echo 'Multiplication test passed'
                } else {
                    error 'Multiplication test failed'
                }
            }
        }
        
        stage('Test Div') {
            steps {
                // Test division
                sh 'java Calc 10 5 div > output.txt'
                if (result == 2) {
                    echo 'Division test passed'
                } else {
                    error 'Division test failed'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                // Deployment steps (if any)
                // For simplicity, we don't have any deployment steps in this example
                echo 'No deployment needed'
            }
        }
    }
    
    post {
        always {
            // Cleanup steps (if any)
            // For simplicity, we don't have any cleanup steps in this example
            echo 'Pipeline execution completed'
        }
    }
}
